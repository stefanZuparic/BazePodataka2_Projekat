<Window x:Class="TimeSheet.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimeSheet"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="600">
    <Grid>
        <TextBox x:Name="txtEmail" HorizontalAlignment="Left" Height="80" Margin="160,90,0,0" TextWrapping="Wrap" Text="ENTER USERNAME" VerticalAlignment="Top" Width="300" TextAlignment="Center" VerticalContentAlignment="Center" FontSize="20"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Height="80" Margin="160,190,0,0" VerticalAlignment="Top" Width="300" VerticalContentAlignment="Center" FontSize="20"/>
        <Button Content="Login" HorizontalAlignment="Left" Margin="225,310,0,0" VerticalAlignment="Top" Width="150" Height="50" Click="Button_Click"/>

    </Grid>
</Window>
